[user]
    name = Étienne Tétreault-Pinard
    email = etienne.t.pinard@gmail.com

[github]
    etpinard

[color]
    ui = auto

[alias]
    br = branch
    brd = branch -d
    co = checkout
    cob = checkout -b
    com = checkout master
    cm = commit
    cp = cherry-pick
    rb = rebase
    rbi = rebase --interactive
    g = gui
    d = diff
    ss = status
    s = status -sb
    last = show HEAD
    ll = log
    l = log --oneline -n 10
    lm = ls-files -m

    # git alias with parameters
    # https://jondavidjohn.com/git-aliases-parameters/

    # fetch github pr locally
    # https://help.github.com/articles/checking-out-pull-requests-locally/
    fetch-pr = "!f() { ID=$1; BRANCHNAME=${2-pr-$1}; git fetch origin pull/$ID/head:$BRANCHNAME; }; f"

[core]
    editor = vi

[difftool]
    prompt = false

[diff]
    tool = vimdiff

[push]
    default = simple
